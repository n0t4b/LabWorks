<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration xmlns="https://hibernate.org/xsd/orm/cfg"
                         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                         xsi:schemaLocation="https://hibernate.org/xsd/orm/cfg https://hibernate.org/xsd/orm/cfg/hibernate-configuration-6.0.xsd">
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/lab4</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">Verterpostgresql!</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
    </session-factory>
</hibernate-configuration>

