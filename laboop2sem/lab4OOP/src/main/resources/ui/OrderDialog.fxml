<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane hgap="5" vgap="5" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controllers.OrderDialogController">
    <Label text="Order Date:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <DatePicker fx:id="orderDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Total Amount:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="totalAmountTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="User:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="userComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Button onAction="#handleOk" text="OK" />
        <Button onAction="#handleCancel" text="Cancel" />
    </HBox>
</GridPane>